{% extends 'base.html.twig' %}

{% block body %}
    <div class="card shadow-lg m-auto">
        <div class="card-header">Renseignez les champs pour vous inscrire</div>
        <div class="card-body">
            <form method="post">
                {{ form_start(form) }}
                {{ form_row(form.email, {'label': "E-mail",'attr': {'size': 30, 'class': 'form-control-lg'}}) }}
                {{ form_row(form.password, {'label': "Mot de passe",'attr': {'size': 30, 'class': 'form-control-lg'}}) }}
                {{ form_row(form.firstname, {'label': "Pr√©nom",'attr': {'size': 30, 'class': 'form-control-lg'}}) }}
                {{ form_row(form.lastname, {'label': "Nom",'attr': {'size': 30, 'class': 'form-control-lg'}}) }}
                {{ form_row(form.birthdate, {'label': "Date de naissance",'attr': {'size': 30, 'class': 'form-control-lg'}}) }}
                {{ form_row(form.address, {'label': "Adresse",'attr': {'size': 30, 'class': 'form-control-lg'}}) }}
                {{ form_widget(form) }}
                <button class="btn btn-lg btn-primary" type="submit">S'enregistrer</button>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}


